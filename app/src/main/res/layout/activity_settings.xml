<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/settings_act"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/map"
    tools:context=".SettingsActivity">

    <ImageView
        android:id="@+id/choice_table"
        android:layout_width="365dp"
        android:layout_height="505dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tableRow2"
        app:srcCompat="@drawable/table_blue" />

    <Button
        android:id="@+id/change_def_loc2"
        android:layout_width="153dp"
        android:layout_height="30dp"
        android:layout_marginTop="16dp"
        android:layout_weight="3"
        android:background="#99A6C9D6"
        android:fontFamily="@font/centurygothicbold"
        android:text="Изменить"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textSize="16dp"
        app:layout_constraintEnd_toEndOf="@+id/tableRow5"
        app:layout_constraintStart_toStartOf="@+id/tableRow5"
        app:layout_constraintTop_toBottomOf="@+id/tableRow5">


    </Button>

    <TableRow
        android:id="@+id/tableRow2"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:background="@drawable/table_up"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <ImageButton
            android:id="@+id/back_btn"
            android:layout_width="27dp"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/back" />

        <ImageView
            android:id="@+id/icon_white"
            android:layout_width="10dp"
            android:layout_height="wrap_content"
            app:layout_constraintHorizontal_bias="0.496" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="296dp"
            android:layout_height="match_parent"
            android:fontFamily="@font/centurygothicbold"
            android:gravity="center_horizontal|center_vertical"
            android:text="Настройки"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:textSize="35dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


    </TableRow>

    <TableRow
        android:id="@+id/tableRow5"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="55dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="55dp"
        android:gravity="center_vertical"
        app:layout_constraintEnd_toEndOf="@+id/choice_table"
        app:layout_constraintStart_toStartOf="@+id/choice_table"
        app:layout_constraintTop_toBottomOf="@+id/textView9">

        <TextView
            android:id="@+id/cur_def_loc"
            android:layout_weight="1"
            android:padding="5dp"
            android:textColor="#FFFFFF"
            android:textSize="16dp"></TextView>


    </TableRow>

    <TextView
        android:id="@+id/textView10"
        android:layout_width="306dp"
        android:layout_height="58dp"
        android:layout_marginStart="80dp"
        android:layout_marginEnd="80dp"
        android:fontFamily="@font/centurygothicbold"
        android:gravity="fill_horizontal|center_vertical"
        android:lineSpacingExtra="-10dp"
        android:text="Текст сообщения по умолчанию:"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textSize="21dp"
        app:layout_constraintBottom_toBottomOf="@+id/choice_table"
        app:layout_constraintEnd_toEndOf="@+id/choice_table"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="@+id/choice_table"
        app:layout_constraintTop_toBottomOf="@+id/textView9"
        app:layout_constraintVertical_bias="0.29" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/centurygothicbold"
        android:gravity="fill_horizontal|center_vertical"
        android:lineSpacingExtra="-10dp"
        android:text="Геолокация по умолчанию:"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textSize="21dp"
        app:layout_constraintBottom_toBottomOf="@+id/choice_table"
        app:layout_constraintEnd_toEndOf="@+id/choice_table"
        app:layout_constraintStart_toStartOf="@+id/choice_table"
        app:layout_constraintTop_toTopOf="@+id/choice_table"
        app:layout_constraintVertical_bias="0.042" />

    <EditText
        android:id="@+id/defMessage"
        android:layout_width="311dp"
        android:layout_height="136dp"
        android:layout_marginBottom="176dp"
        android:background="@drawable/table_white"
        android:text=""
        android:textColor="@color/colorAccent"
        app:layout_constraintBottom_toBottomOf="@+id/choice_table"
        app:layout_constraintEnd_toEndOf="@+id/choice_table"
        app:layout_constraintStart_toStartOf="@+id/choice_table"
        app:layout_constraintTop_toBottomOf="@+id/textView10"
        app:layout_constraintVertical_bias="0.0" />


    >

</androidx.constraintlayout.widget.ConstraintLayout>