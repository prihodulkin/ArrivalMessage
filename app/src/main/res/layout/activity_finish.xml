<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/finish_act"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/map"
    tools:context=".FinishActivity">

    <ImageView
        android:id="@+id/ready_upper"
        android:layout_width="310dp"
        android:layout_height="75dp"
        android:layout_marginTop="80dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tableRow4"
        app:srcCompat="@drawable/ready_upper" />

    <TableRow
        android:id="@+id/tableRow4"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:background="@drawable/create_upper"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/icon_white"
            android:layout_width="10dp"
            android:layout_height="wrap_content"
            app:layout_constraintHorizontal_bias="0.496"
            />

        <ImageButton
            android:id="@+id/back_btn"
            android:layout_width="35dp"
            android:layout_height="51dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/done" />


    </TableRow>

    <ImageButton
        android:id="@+id/main_menu_btn"
        android:layout_width="192dp"
        android:layout_height="54dp"
        android:background="@drawable/button_to_main_menu"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.9" />




    <TableLayout
        android:background="@drawable/table"

        android:layout_marginTop="150dp"
        android:layout_marginBottom="150dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tableRow4">


        <TableLayout
            android:id="@+id/tableInfo"
            android:layout_width="270dp"
            android:layout_height="180dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="30dp"
            android:layout_marginLeft="30dp"
            android:layout_marginEnd="30dp"
            android:layout_marginBottom="25dp"
            android:foregroundGravity="top"
            android:scaleType="fitXY">

        </TableLayout>

        <ScrollView
            android:layout_gravity="center_horizontal"
            android:id="@+id/scrollTable"
            android:layout_width="301dp"
            android:layout_height="300dp"
            android:layout_marginBottom="132dp"
            android:layout_weight="1"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:fadeScrollbars="false"
            android:fillViewport="true"
            android:foregroundGravity="top"
            android:overScrollMode="never"
            android:scrollbarSize="10dp"
            android:scrollbarStyle="insideOverlay"
            android:scrollbarThumbVertical="@color/cardview_light_background"
            android:scrollbarTrackVertical="@color/BlueForLogo"
            android:scrollbars="vertical"
            android:verticalScrollbarPosition="right">

            <TableLayout
                android:id="@+id/userList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="10dp"
                android:layout_marginRight="50dp"


                android:fillViewport="true"
                android:foregroundGravity="top"
                android:isScrollContainer="true"
                android:scaleType="fitXY">

            </TableLayout>
        </ScrollView>


    </TableLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
